<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="block app-block-intro">
      <div class="container text-center">
        <h1 class="block-title m-b-sm text-uppercase brand-name">Free Flow Flava</h1>
        <p class="lead m-b-lg text-uppercase p-b-md">The sound, with simplicity.</p>
        <%= image_tag("contact.jpg", alt: "Seggun", width: '1150') %>
      </div>
      <div class="container">
        <p class="lead m-b-lg text-uppercase p-b-md">Listen to this good music</p>
        <%= image_tag("home2.jpg", alt: "ninja", width: '1150', height: '350') %>
      </div>
      <div class="container">
        <p class="lead m-b-lg text-uppercase p-b-md">Look at samurai...</p>
        <%= image_tag("samurai.jpg", alt: "samurai", width: '1130', height: '400') %>
        <hr>
      </div>
      <div class="container text-center">
        <p class="lead m-b-lg text-uppercase p-b-md">...Join to community and stay here</p>
        <%= link_to "Join to community", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
  </div>
<% end %>
